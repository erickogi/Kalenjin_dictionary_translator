<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:background="@drawable/rounded_border_transaparent"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:padding="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView

                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:id="@+id/txt_word1"
                                android:textSize="20sp"
                                android:textStyle="bold|italic"
                                android:text="Word"
                                android:textColor="@color/colorPrimaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_alignParentEnd="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/speak_word1"
                                    android:paddingEnd="12dp"
                                    android:src="@drawable/ic_volume_up_black_24dp"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ImageView
                                    android:id="@+id/share_word1"
                                    android:paddingEnd="12dp"
                                    android:src="@drawable/ic_menu_share"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </RelativeLayout>


                        <TextView
                            android:textIsSelectable="true"
                            android:textColor="@color/colorSecondaryText"
                            android:id="@+id/des_word1"
                            android:layout_marginTop="4dp"

                            android:text="@string/lorem_ipsum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_import_export_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:padding="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/txt_word2"
                                android:textSize="20sp"
                                android:textStyle="bold|italic"
                                android:text="Word"
                                android:textColor="@color/colorPrimaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_alignParentEnd="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/speak_word2"
                                    android:paddingEnd="12dp"
                                    android:src="@drawable/ic_volume_up_black_24dp"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ImageView
                                    android:id="@+id/share_word2"
                                    android:paddingEnd="12dp"
                                    android:src="@drawable/ic_menu_share"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </RelativeLayout>


                        <TextView
                            android:textIsSelectable="true"
                            android:textColor="@color/colorSecondaryText"

                            android:id="@+id/des_word2"
                            android:layout_marginTop="4dp"

                            android:text="@string/lorem_ipsum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>


        <!--<ImageView -->
        <!---->
        <!--android:id="@+id/chevron_left"-->
        <!--android:src="@drawable/ic_chevron_left_black_24dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <!--<ImageView-->
        <!--android:id="@+id/chevron_right"-->
        <!--android:src="@drawable/ic_chevron_right_black_24dp"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <android.support.v7.widget.CardView
            android:layout_alignParentBottom="true"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="@drawable/rounded_border_transaparent"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/share_all"
                    android:padding="12dp"
                    android:src="@drawable/ic_menu_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/favorite_all"
                    android:padding="12dp"
                    android:src="@drawable/ic_favorite_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/note_all"
                    android:padding="12dp"
                    android:src="@drawable/ic_event_note_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v7.widget.CardView>